@model ErrorViewModel
@{
    ViewData["Title"] = "System Error";
}

<div class="container text-center" style="margin-top: 80px; max-width: 800px;">
    <div class="display-1 text-danger mb-4">
        <i class="bi bi-exclamation-octagon-fill"></i>
    </div>

    <h1 class="display-5 fw-bold text-dark">Oops! Something went wrong.</h1>
    <p class="lead text-secondary">
        We're experiencing a technical issue on our end. Our team has been notified and we are working to fix it.
    </p>

    <hr class="my-5 w-25 mx-auto">

    <div class="card shadow-sm border-0 bg-light p-4">
        <h4 class="mb-4 fw-bold">Need immediate assistance?</h4>
        <p class="text-muted mb-4">Feel free to reach out to our support team through any of the following channels:</p>
        
        <div class="d-flex flex-wrap justify-content-center gap-3">
            <a href="https://wa.me/966XXXXXXXXX" class="btn btn-success btn-lg px-4 shadow-sm">
                <i class="bi bi-whatsapp"></i> WhatsApp
            </a>

            <a href="https://t.me/YourUsername" class="btn btn-info text-white btn-lg px-4 shadow-sm">
                <i class="bi bi-telegram"></i> Telegram
            </a>

            <a href="mailto:support@yourdomain.com" class="btn btn-dark btn-lg px-4 shadow-sm">
                <i class="bi bi-envelope"></i> Email Support
            </a>
        </div>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="mt-5">
            <p class="text-muted">
                Reference ID: <span class="badge bg-secondary">@Model.RequestId</span>
                <br>
                <small>(Please provide this ID when contacting support)</small>
            </p>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary rounded-pill">
            <i class="bi bi-house-door"></i> Back to Home
        </a>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body { background-color: #f8f9fa; }
        .btn-lg { font-size: 1.1rem; font-weight: 500; }
    </style>
}
@model IEnumerable<OmniSystem.ViewModels.EmployeeListViewModel>

@{
    ViewData["Title"] = "Employee Directory";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom">
            <div>
                <h5 class="mb-0 fw-bold text-primary">
                    <i class="bi bi-people-fill me-2"></i>Employee Directory
                </h5>
                <small class="text-muted">Manage your team members and their positions</small>
            </div>
            <a asp-controller="Employees" asp-action="CreateEmployee" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-lg me-1"></i> Add New Employee
            </a>
        </div>

        <div class="table-responsive">
            <table class="table align-middle table-hover mb-0">
                <thead class="bg-light text-muted small">
                    <tr>
                        <th class="ps-4 py-3">EMPLOYEE</th>
                        <th class="py-3">POSITION</th>
                        <th class="py-3">SALARY</th>
                        <th class="py-3">RATING</th>
                        <th class="text-end pe-4 py-3">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No employees found.
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3 shadow-sm">
                                        @item.Initials
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.FullName</div>
                                        <div class="text-muted small">
                                            <i class="bi bi-person me-1"></i>@@@item.UserName 
                                            <span class="mx-1">|</span>
                                            <i class="bi bi-envelope me-1"></i>@item.Email
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (item.PositionName != "N/A" && item.PositionName != "No Position")
                                {
                                    <span class="badge rounded-pill bg-soft-primary text-primary px-3">
                                        @item.PositionName
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-light text-muted px-3">
                                        @item.PositionName
                                    </span>
                                }
                            </td>
                            <td class="fw-semibold">@item.Salary.ToString("C0")</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-star-fill text-warning me-1 small"></i>
                                    <span>@item.Rating</span>
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-white btn-sm border">
                                        <i class="bi bi-pencil text-primary"></i>
                                    </a>
                                    <button type="button" class="btn btn-white btn-sm border text-danger" onclick="confirmDelete('@item.Id')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* تنسيق الدائرة (Avatar) */
    .avatar-circle {
        width: 45px;
        height: 45px;
        background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: white;
        font-size: 0.9rem;
        letter-spacing: 1px;
    }

    /* تأثيرات الجدول */
    .table-hover tbody tr:hover {
        background-color: #f8fafc;
        transition: background-color 0.2s ease;
    }

    /* تنسيق الـ Badge الخاص بالمنصب */
    .bg-soft-primary {
        background-color: #e0e7ff;
    }

    .btn-white {
        background-color: #fff;
    }

    .btn-white:hover {
        background-color: #f1f5f9;
    }
</style>
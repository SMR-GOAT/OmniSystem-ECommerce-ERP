@model OmniSystem.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Create New Admin";
}

  @section Styles {
            <link rel="stylesheet" href="~/css/User/Create.css" asp-append-version="true" />
}

<div class="container mt-5 pb-5">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-9">
            <div class="card shadow border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary py-4 text-center">
                    <h3 class="fw-bold mb-0 text-white">
                        <i class="bi bi-person-plus-fill me-2"></i>Create New Admin Account
                    </h3>
                    <p class="text-white-50 small mb-0 mt-1">Please fill in the details below to register a new system user</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post" class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm rounded-3 mb-4 small" role="alert"></div>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-semibold text-dark small">First Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-person text-primary"></i></span>
                                    <input asp-for="FirstName" class="form-control bg-light border-0 py-2 shadow-none" placeholder="Enter first name..." />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger extra-small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-semibold text-dark small">Last Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-person-check text-primary"></i></span>
                                    <input asp-for="LastName" class="form-control bg-light border-0 py-2 shadow-none" placeholder="Enter last name..." />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger extra-small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label fw-semibold text-dark small">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-at text-primary"></i></span>
                                    <input asp-for="UserName" class="form-control bg-light border-0 py-2 shadow-none" placeholder="Unique username (e.g. j.doe)" />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger extra-small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold text-dark small">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-envelope text-primary"></i></span>
                                    <input asp-for="Email" type="email" class="form-control bg-light border-0 py-2 shadow-none" placeholder="example@domain.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger extra-small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-semibold text-dark small">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-phone text-primary"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control bg-light border-0 py-2 shadow-none" placeholder="+966 5x xxx xxxx" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger extra-small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Salary" class="form-label fw-semibold text-dark small">Monthly Salary (SAR)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><span class="small fw-bold text-primary">SAR</span></span>
                                    <input asp-for="Salary" type="number" class="form-control bg-light border-0 py-2 shadow-none" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Salary" class="text-danger extra-small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Address" class="form-label fw-semibold text-dark small">Residential Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-geo-alt text-primary"></i></span>
                                    <input asp-for="Address" class="form-control bg-light border-0 py-2 shadow-none" placeholder="Street, City, Country" />
                                </div>
                                <span asp-validation-for="Address" class="text-danger extra-small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Password" class="form-label fw-semibold text-dark small">Secure Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-shield-lock text-primary"></i></span>
                                    <input asp-for="Password" type="password" id="passInput" class="form-control bg-light border-0 py-2 shadow-none" placeholder="Minimum 8 characters..." />
                                    <button class="btn btn-light border-0" type="button" onclick="togglePassVisibility()">
                                        <i id="toggleIcon" class="bi bi-eye-slash"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger extra-small"></span>
                            </div>

                            <div class="col-12 mt-5">
                                <div class="d-flex flex-column flex-md-row gap-3">
                                    <button type="submit" class="btn btn-primary btn-lg flex-grow-1 rounded-pill shadow-sm py-3 fw-bold">
                                        <i class="bi bi-save me-2"></i>Create Account
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill py-3 fw-semibold">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
   <script src="~/js/User/Create.js" asp-append-version="true"></script>
}
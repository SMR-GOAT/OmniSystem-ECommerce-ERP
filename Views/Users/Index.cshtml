@model IEnumerable<OmniSystem.ViewModels.UserListViewModel>

@{
    ViewData["Title"] = "Admins";
}

@section Styles {
    @* التأكد من استخدام link لملفات الـ CSS *@
    <link rel="stylesheet" href="~/css/User/Index.css" asp-append-version="true" />
}

<div class="container-fluid mt-5 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Admin Management</h2>
            <p class="text-muted small">Overview of system administrators and staff members.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm px-4 rounded-pill fw-bold">
            <i class="bi bi-person-plus-fill me-2"></i>Add New Admin
        </a>
    </div>

@if (TempData["SuccessMessage"] != null)
{
    <div id="success-alert" class="alert alert-success shadow-lg top-alert" role="alert">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-3 fs-3"></i>
                <div>
                    <h6 class="fw-bold mb-0">Notification</h6>
                    <p class="mb-0 small">@TempData["SuccessMessage"]</p>
                </div>
            </div>
            @* زر إغلاق اختياري لإعطاء مظهر التنبيهات الكاملة *@
            <button type="button" class="btn-close ms-4" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-dark">
                            <th class="ps-4 py-3 text-uppercase fs-7 fw-bold border-0">Admin Info</th>
                            <th class="py-3 text-uppercase fs-7 fw-bold border-0">Role</th>
                            <th class="py-3 text-uppercase fs-7 fw-bold border-0">Contact Details</th>
                            <th class="py-3 text-uppercase fs-7 fw-bold border-0">Salary</th>
                            <th class="py-3 text-uppercase fs-7 fw-bold text-center border-0">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3 rounded-circle d-flex align-items-center justify-content-center fw-bold shadow-sm @(user.Role == "SuperAdmin" ? "bg-gold-gradient text-white" : "bg-primary text-white")" 
                                             style="width: 45px; height: 45px; font-size: 1.1rem;">
                                            @user.FullName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <span class="fw-bold text-dark d-block mb-0">@user.FullName</span>
                                            <span class="badge bg-light text-muted border-0 p-0" style="font-size: 0.75rem;">@@@user.UserName</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (user.Role == "SuperAdmin")
                                    {
                                        <span class="badge badge-fakhama shadow-sm">
                                            <i class="bi bi-crown-fill me-1"></i> SUPER ADMIN
                                        </span>
                                    }
                                    else if (user.Role == "Admin")
                                    {
                                        <span class="badge badge-admin shadow-sm">
                                            <i class="bi bi-shield-lock-fill me-1"></i> ADMIN
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-secondary border px-3 rounded-pill">
                                            @user.Role
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <small class="text-dark fw-medium"><i class="bi bi-envelope-at me-2 text-primary"></i>@user.Email</small>
                                        <small class="text-muted"><i class="bi bi-phone me-2"></i>@user.PhoneNumber</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">
                                        @user.Salary.ToString("N0") <span class="text-muted fw-normal small">SAR</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-action-edit shadow-sm" title="Edit User">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        @* تأكد أن دالة confirmDelete موجودة في ملف Index.js *@
                                       <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete('@user.Id')">
    <i class="bi bi-trash"></i> Delete
</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* استدعاء ملف الجافاسكريبت الصحيح للمجلد الجديد *@
   <script src="~/js/User/Index.js" asp-append-version="true"></script>
<script src="~/js/User/Delete.js" asp-append-version="true"></script>
}
@model IEnumerable<OmniSystem.Controllers.ClientViewModel>

@{
    ViewData["Title"] = "Clients";
}

<div class="container py-4">
    <div class="card border-0 shadow-sm mb-4 bg-white">
        <div class="card-body d-flex justify-content-between align-items-center p-4">
            <div>
                <h3 class="mb-0 fw-bold text-dark"><i class="bi bi-briefcase me-2 text-primary"></i>Client Management</h3>
                <small class="text-muted">Total Clients: @Model.Count()</small>
            </div>
            <button class="btn btn-success px-4 shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> New Client
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-muted small fw-bold text-uppercase">Client Info</th>
                        <th class="py-3 text-muted small fw-bold text-uppercase">Company</th>
                        <th class="py-3 text-muted small fw-bold text-uppercase">Status</th>
                        <th class="py-3 text-muted small fw-bold text-uppercase text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold">@client.Name</div>
                                <div class="small text-muted">@client.Email</div>
                            </td>
                            <td>
                                <span class="text-dark">@client.Company</span>
                            </td>
                            <td>
                                @if (client.Status == "Active")
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 px-3">Pending</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm">
                                    <button class="btn btn-sm btn-outline-secondary border-0"><i class="bi bi-eye"></i></button>
                                    <button class="btn btn-sm btn-outline-primary border-0"><i class="bi bi-pencil"></i></button>
                                    <button class="btn btn-sm btn-outline-danger border-0"><i class="bi bi-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body { background-color: #f4f6f9; }
    .card { border-radius: 12px; }
    .table thead th { font-size: 0.7rem; letter-spacing: 0.8px; }
    .btn-group .btn:hover { background-color: #f8f9fa; }
</style>